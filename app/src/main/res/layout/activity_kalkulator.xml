<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KalkulatorActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Kalkulator Sederhana : Vinola" />

        <EditText
            android:id="@+id/edtnmr1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:ems="10"
            android:inputType="number"
            android:hint="Masukkan angka di sini" />

        <EditText
            android:id="@+id/edtnmr2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="16dp"
            android:inputType="number"
            android:hint="Masukkan angka di sini" />

        <Button
            android:id="@+id/btntbh"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="115dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Tambah" />

        <Button
            android:id="@+id/btnkl"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="115dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Kali" />

        <Button
            android:id="@+id/btnbg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="115dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Bagi" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="Hasil" />

        <TextView
            android:id="@+id/hsl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>